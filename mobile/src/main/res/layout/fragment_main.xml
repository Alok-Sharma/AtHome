<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".MainActivity$PlaceholderFragment"
    android:id="@+id/rel"
    android:clickable="true"
    >

    <Button
        android:layout_width="wrap_content"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:id="@+id/wifiButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="WiFi"
        android:onClick="setWifi"/>

    <!--<ToggleButton-->
        <!--android:layout_width="wrap_content"-->
        <!--android:textSize="15dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/invisibleButton"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:gravity="center"-->
        <!--android:text="Visible"-->
        <!--android:onClick="setWifi"/>-->

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wifiButton"
        android:layout_alignLeft="@+id/wifiButton"
        android:layout_alignStart="@+id/wifiButton"
        android:id="@+id/invisibleButton"
        android:text="Set invisibility"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/removeButton"
        android:onClick="removeFragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_arrow_back_black_36dp"
        android:background="@null"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/settingsName"
        android:layout_below="@+id/removeButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
