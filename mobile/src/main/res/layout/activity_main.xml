<RelativeLayout
    android:id="@+id/mainContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="MergeRootFrame"
    android:background="@color/bg_main_normal"
    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addFragment"
        android:id="@+id/addButton1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_account_circle_black_48dp"
        android:scaleType="centerInside"
        android:background="@null"
        android:adjustViewBounds="true"
        android:paddingBottom="20dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"/>

    <view
        android:layout_width="45dp"
        android:layout_height="45dp"
        class="mbanje.kurt.fabbutton.FabButton"
        android:id="@+id/indeterminate"
        android:layout_gravity="center"
        android:color="#000"
        android:src="@drawable/ic_refresh_white_48dp"
        android:visibility="visible"
        android:indeterminate="true"
        android:max="100"
        app:fbb_autoStart="true"
        app:fbb_progressColor="@color/bg_settings"
        app:fbb_progressWidthRatio="0.20"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:minHeight="@dimen/abc_action_button_min_height_material"
        android:minWidth="@dimen/abc_action_button_min_width_material"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Looking for\nwho is home.."
            android:textSize="68dp"
            android:id="@+id/mainText"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/text"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainText"
            android:layout_centerHorizontal="true"
            android:id="@+id/atHomeUsers"
            android:gravity="center">

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>